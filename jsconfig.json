{
  "compilerOptions": {
    "baseUrl": ".", // Base directory for absolute imports
    "paths": {
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@validation/*": ["validation/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
